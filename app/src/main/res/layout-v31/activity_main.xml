<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/toolbar_background"
        android:titleTextColor="?attr/colorOnSurface"
        android:elevation="2dp"
        app:title="@string/parametre"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:menu="@menu/main_menu"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_scrollFlags="scroll|enterAlways" />


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:colorBackground">

        <LinearLayout
            android:id="@+id/settingsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/me"
                    android:background="@drawable/profile_circle_bg"
                    android:contentDescription="@string/profil"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:text="@string/i_b_m"
                        android:textSize="18sp"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="@string/i_b_m"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurface"
                        android:alpha="0.7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/qrcode"
                    android:layout_width="40dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_qr_code"
                    android:contentDescription="@string/qrcode"
                    app:tint="?attr/colorOnSurface" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="?attr/android:textColorSecondary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingTop="20dp"
                android:gravity="">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="40dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_numbers"
                    app:tint="?attr/colorPrimary" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/title"
                        android:text="@string/meta_verified"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:layout_marginBottom="5dp"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:id="@+id/description"
                        android:text="Montrez que votre profil est vérifié"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="20dp"
                        android:alpha="0.7" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="?attr/android:textColorSecondary" />
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/item_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/keyItem" />

            <include layout="@layout/item_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lockItem" />

            <include layout="@layout/item_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/avatarItem"/>

            <include layout="@layout/item_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/favoriItem" />

            <include layout="@layout/item_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/discussionItem" />

            <include layout="@layout/item_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/notificationItem" />

            <include layout="@layout/item_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/storageItem" />

            <include layout="@layout/item_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/accessibilityItem" />

            <include layout="@layout/item_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/languageItem" />

            <include layout="@layout/item_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/helpItem" />

            <include layout="@layout/item_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/inviteItem"
                android:tag="Inviter un contact||@drawable/ic_group_add" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/from"
                    android:textSize="12sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="2dp"
                        android:text="@string/from"
                        android:textColor="?attr/colorControlNormal"
                        android:src="@drawable/meta"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/colorOnSurface"
                        android:text="@string/meta" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>